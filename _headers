/index.html
  Cache-Control: max-age=0, no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# also protect the bare "/" route
/
  Cache-Control: max-age=0, no-cache, no-store, must-revalidate

/images/*
  Cache-Control: public, max-age=31536000, immutable

/assets/*
  Cache-Control: public, max-age=31536000, immutable

/api/catalog
  Cache-Control: public, max-age=300, s-maxage=300
